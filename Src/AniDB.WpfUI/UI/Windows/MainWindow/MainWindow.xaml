<Window x:Class="AniDB.WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AniDB.WpfUI"
        xmlns:databasesList="clr-namespace:AniDB.WpfUI.UserControls.DatabasesList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Content="New database" Width="100" HorizontalAlignment="Left" Command="{Binding CreateNewDatabase}"/>
            <databasesList:DatabasesList
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DataContext="{Binding DatabasesListViewModel}"/>
        </StackPanel>
        <GridSplitter
            Grid.Column="1"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Center"
            Width="3"/>
        <TextBox
            Grid.Column="2"
            Text="{Binding DatabasesListViewModel.SelectedDatabase.Name}"/>
    </Grid>
</Window>
